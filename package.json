{
  "name": "wicle",
  "version": "1.1.2",
  "description": "Component library for Web development.",
  "files": [
    "dist",
    "scss",
    "!**/*.map"
  ],
  "main": "index.js",
  "typings": "dist/js/wicle",
  "scripts": {
    "wicle:build": "gulp wicle:build",
    "wicle:clean": "gulp wicle:clean",
    "docs:build": "gulp docs:build",
    "docs:clean": "gulp docs:clean",
    "build-all": "gulp @build",
    "clean-all": "gulp @clean",
