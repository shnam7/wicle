  },
  "homepage": "https://github.com/shnam7/wicle#readme",
  "devDependencies": {
    "@types/jquery": "^3.3.29",
    "browser-sync": "^2.26.5",
    "gulp": "^4.0.2",
    "gulp-build-manager": "^3.1.1",
    "gulp-clean-css": "^4.2.0",
    "gulp-sass": "^4.0.2",
    "gulp-typescript": "^5.0.1",
    "gulp-uglify-es": "^1.0.4",
    "lost": "^8.3.1",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended": "^2.2.0",
