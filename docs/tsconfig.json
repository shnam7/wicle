{
    "compilerOptions": {
        "target": "es5",
        "module": "system", // note:webpack does not supports systemjs
        "declaration": false,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "lib": ["dom", "es6", "dom.iterable", "scripthost"],

        "baseUrl": ".",
        "paths": { // relative to baseUrl
            "*": ["*", "../dist/js/*"],
        },
    },
    "exclude": ["_site"]
}
