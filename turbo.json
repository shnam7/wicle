{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "inputs": ["src/**", "test/**"],
            "outputs": ["./dist"],
            "dependsOn": ["^build"]
        },
        "clean": {
            "cache": false
        }
    }
}
