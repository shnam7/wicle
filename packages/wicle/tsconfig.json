{
    "$schema": "https://json.schemastore.org/tsconfig",

    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "declarationMap": false,
        "esModuleInterop": true,
        "incremental": false,
        "isolatedModules": true, // this causes d.ts files are not created.
        "moduleDetection": "force",
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "strict": true,

        "pretty": true,
        "rootDir": "./scripts", // required to have mdoule names to start from directory 'wicle...'
        "lib": ["dom", "es6", "dom.iterable", "scripthost"],
        // "outDir": "./dist/js",

    },

    // "include": ["./scripts/**/*.ts"],
    // "exclude": ["dist", "docs", "node_modules", "__trash"]
}
