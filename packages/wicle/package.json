{
    "name": "wicle",
    "version": "2.0.2",
    "description": "Component library for Web development.",
    "type": "module",
    "files": [
        "dist/js/*",
        "scss/*"
    ],
    "main": "dist/js/index.js",
    "typings": "dist/js/index.d.ts",
    "scripts": {
        "dev": "gulp @watch",
        "build": "gulp @build",
        "sass": "sass -I. -Inode_modules/sass-wdk scss:dist",
        "test": "vitest run",
        "test-sass": "vitest run sass",
        "jest-sass": "jest --watch",
        "clean": "gulp @clean",
        "watch": "gulp @watch",
        "jekyll-server": "jekyll serve -s docs -d docs/_site/wicle --safe --incremental",
        "prepare-to-commit": "npm run clean-all && npm run build-all && gulp @clean-to-prepare",
        "npm-dry-run": "npm publish --dry-run"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shnam7/wicle"
    },
    "keywords": [
        "scss",
        "utility",
        "web",
        "ui"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/shnam7/wicle/issues"
    },
    "homepage": "https://github.com/shnam7/wicle#readme",
    "devDependencies": {
        "@gulp-tron/plugin-scripts": "file://~/dev/public/gulp-tron/packages/plugin-scripts",
        "@gulp-tron/plugin-styles": "file://~/dev/public/gulp-tron/packages/plugin-styles",
        "@gulp-tron/plugin-utils": "file://~/dev/public/gulp-tron/packages/plugin-utils",
        "@gulp-tron/tsconfig": "file://~/dev/public/gulp-tron/packages/tsconfig",
        "@types/jquery": "^3.5.29",
        "gulp": "^4.0.2",
        "gulp-tron": "file://~/dev/public/gulp-tron/packages/gulp-tron",
        "gulp-typescript": "^6.0.0-alpha.1",
        "postcss-combine-duplicated-selectors": "^10.0.3",
        "postcss-sass": "^0.5.0",
        "sass-true": "^8.0.0",
        "sass-wdk": "file://~/dev/public/sass-wdk",
        "stylelint-config-standard-scss": "^13.0.0",
        "typescript": "^5.4.2",
        "vitest": "^1.3.1"
    }
}
