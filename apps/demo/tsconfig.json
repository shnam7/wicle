{
    "$schema": "https://json.schemastore.org/tsconfig",

    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node10",
        "declaration": true,
        "declarationMap": false,
        "esModuleInterop": true,
        "incremental": false,
        // "isolatedModules": true, // this causes d.ts files are not created.
        "moduleDetection": "force",
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "strict": true,
        "jsx": "react",

        "pretty": true,
        "paths": {
            "@": ["./src/"],
            "wicle": ["./node_modules/wicle/dist/"]
        },
        // "rootDir": "./scripts", // required to have mdoule names to start from directory 'wicle...'
        "lib": ["dom", "es6", "dom.iterable", "scripthost"]
        // "outDir": "./dist/js",
    }

    // "include": ["./src/**/*.ts", "./src/**/*.d.ts"]
    // "exclude": ["dist", "docs", "node_modules", "__trash"]
}
